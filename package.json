{
  "name": "@prismatic-io/spectral",
  "version": "1.0.2",
  "description": "Utility library for building Prismatic components",
  "keywords": [
    "prismatic"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://prismatic.io",
  "bugs": {
    "url": "https://github.com/prismatic-io/spectral"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prismatic-io/spectral.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn run lint && yarn run clean && tsc",
    "build-production": "yarn run build --sourceMap false",
    "prepack": "yarn run build",
    "format": "prettier --loglevel error --write '!./dist/**' '!LICENSE' '**'",
    "check": "prettier --check '!./dist/**' '!LICENSE' '**'",
    "lint": "eslint --quiet --ext .ts,.js src/",
    "test": "jest --maxWorkers=4"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "date-fns": "^2.16.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/node": "^13.13.0",
    "@types/valid-url": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "fast-check": "^2.3.0",
    "ts-jest": "^26.4.0",
    "typedoc": "^0.17.4",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules",
      "webpack.config.js"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
