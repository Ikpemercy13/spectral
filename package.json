{
  "name": "@prismatic-io/spectral",
  "version": "0.1.2",
  "description": "Utility library for building Prismatic components",
  "keywords": [
    "prismatic"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://prismatic.io",
  "bugs": {
    "url": "https://github.com/prismatic-io/spectral"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prismatic-io/spectral.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint --quiet --ext .ts,.js src/",
    "format": "prettier --loglevel error --write '!./dist/**' '**'",
    "check": "prettier --check '!./dist/**' '**'",
    "build": "yarn run lint && tsc",
    "prepack": "yarn run build",
    "test": "echo \"Warning: no test specified\""
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@types/pino": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "typedoc": "^0.17.4",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules",
      "webpack.config.js"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
